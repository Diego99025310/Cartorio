<section class="row g-4">
  <div class="col-12 col-md-4">
    <div class="card text-bg-primary shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Tipos de Escritura</h5>
        <p class="display-5 fw-bold"><%= contagem.escrituras %></p>
        <a class="btn btn-light btn-sm" href="/escrituras">Gerenciar</a>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="card text-bg-success shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Cláusulas</h5>
        <p class="display-5 fw-bold"><%= contagem.clausulas %></p>
        <a class="btn btn-light btn-sm" href="/clausulas">Gerenciar</a>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-4">
    <div class="card text-bg-warning shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Declarações</h5>
        <p class="display-5 fw-bold"><%= contagem.declaracoes %></p>
        <a class="btn btn-light btn-sm" href="/declaracoes">Gerenciar</a>
      </div>
    </div>
  </div>
</section>

<% if (error) { %>
<div class="alert alert-danger mt-4" role="alert"><%= error %></div>
<% } %>
